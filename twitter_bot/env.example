# Twitter API Credentials
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# OpenAI API (Optional for enhanced content generation)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/codedao_twitter_bot
# Alternative: MongoDB Atlas
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/codedao_twitter_bot

# CodeDAO Dashboard Integration
CODEDAO_DASHBOARD_URL=https://codedao-org.github.io/dashboard.html
CODEDAO_API_URL=https://api.codedao.org
CODEDAO_GITHUB_URL=https://github.com/CodeDAO-org/codedao-extension

# Bot Configuration
BOT_USERNAME=CodeDAOBot
BOT_ENVIRONMENT=development
# BOT_ENVIRONMENT=production

# Safety & Rate Limiting
MAX_POSTS_PER_DAY=25
MAX_FOLLOWS_PER_HOUR=10
MAX_LIKES_PER_HOUR=50
MAX_REPLIES_PER_HOUR=15
MIN_DELAY_BETWEEN_ACTIONS=30000

# Analytics & Monitoring
ANALYTICS_ENABLED=true
LOG_LEVEL=info
WEBHOOK_URL=your_webhook_url_for_notifications

# Content Strategy
CONTENT_GENERATION_ENABLED=true
AUTO_ENGAGEMENT_ENABLED=true
HASHTAG_MONITORING_ENABLED=true
INFLUENCER_ENGAGEMENT_ENABLED=true

# Scheduling
TIMEZONE=UTC
POSTING_SCHEDULE_ENABLED=true
DAILY_STATS_TIME=09:00
EDUCATIONAL_CONTENT_TIMES=10:00,15:00
ENGAGEMENT_POST_TIME=13:00 