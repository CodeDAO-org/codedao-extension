{
  "version": 2,
  "name": "codedao-telegram-bot",
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/webhook/(.*)",
      "dest": "/api/webhook.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "/api/admin.js"
    },
    {
      "src": "/message-interface",
      "dest": "/public/message-interface.html"
    },
    {
      "src": "/",
      "dest": "/public/index.html"
    }
  ],
  "env": {
    "BOT_TOKEN": "@bot_token",
    "GITHUB_TOKEN": "@github_token",
    "ADMIN_TELEGRAM_USERNAME": "@admin_telegram_username",
    "CONTRACT_ADDRESS": "@contract_address",
    "RPC_URL": "@rpc_url"
  },
  "functions": {
    "api/**/*.js": {
      "maxDuration": 30
    }
  }
} 