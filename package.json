{
    "name": "codedao-extension",
    "displayName": "CodeDAO",
    "description": "Earn cryptocurrency (CODE tokens) for coding!",
    "version": "1.0.0",
    "publisher": "CodeDAO-org",
    "engines": {
        "vscode": "^1.73.0"
    },
    "categories": ["Other"],
    "keywords": ["cryptocurrency", "rewards", "coding", "blockchain", "web3"],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "codedao.showStats",
                "title": "CodeDAO: Show Stats",
                "icon": "$(graph)"
            },
            {
                "command": "codedao.connectWallet",
                "title": "CodeDAO: Connect Wallet",
                "icon": "$(plug)"
            },
            {
                "command": "codedao.claimRewards",
                "title": "CodeDAO: Claim Rewards",
                "icon": "$(zap)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "codedao.showStats"
                },
                {
                    "command": "codedao.connectWallet"
                },
                {
                    "command": "codedao.claimRewards"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "dependencies": {
        "ethers": "^5.7.2"
    },
    "devDependencies": {
        "@types/vscode": "^1.73.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    }
}
